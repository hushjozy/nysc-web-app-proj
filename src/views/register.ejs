<html>
  <head>
    <link rel="stylesheet" href="/css/register.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <img src="/img/BG.png" style="width: 1840px; height: 815px;" />

    <div class="container">
      <form action="/register" method="POST">
        <p>Welcome</p>
        <input
          name="name"
          type="text"
          placeholder="Full Name E.g James Smith"
        /><br />
        <input name="email" type="email" placeholder="Email" /><br />
        <input name="stateCode" type="text" hidden value="0001" /><br />

        <input name="password" type="password" placeholder="Password" /><br />
        <button class="button" type="submit">Sign in</button><br />
        <a href="#">Forgot Password?</a>
      </form>

      <div class="drops">
        <div class="drop1">.</div>
        <div class="drop2">.</div>
        <div class="drop3">.</div>
        <div class="drop4">.</div>
        <div class="drop5">.</div>
      </div>
    </div>
  </body>
</html>
